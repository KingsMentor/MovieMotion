<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/loading_view_indicator"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="@dimen/loading_view_padding">

    <ProgressBar
        android:layout_width="@dimen/loading_ic_pb_dimen"
        android:layout_height="@dimen/loading_ic_pb_dimen"
        android:layout_gravity="center" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loading_txt_margin"
        android:gravity="center"
        android:text="@string/loading"
        android:textColor="@color/faded_white"
        android:textSize="@dimen/loading_txt_size" />
</android.support.v7.widget.LinearLayoutCompat>